@page
@model T2.PR2._APIRESTRazorPages.Pages.DetailGameModel
@{
	ViewData["Title"] = "Detailed Game";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm mb-4">
               <img src="@Model.Game.ImgUrl"
                    class="card-img-top"
                    alt="@Model.Game.Title"
                    style="object-fit: cover; height: 350px;" />
               <div class="card-body">
                   <h1 class="card-title mb-3">@Model.Game.Title</h1>
                   <h5 class="text-muted mb-4">Developed by <strong>@Model.Game.DeveloperTeam</strong></h5>
                   <p class="card-text mb-4">@Model.Game.Description</p>

                   <ul class="list-group list-group-flush mb-4">
                       <li class="list-group-item">
                           <strong>Votes:</strong> @Model.Game.VotingUsers.Count
                       </li>
                   </ul>

                   <a asp-page="/Index" class="btn btn-outline-secondary">
                       ← Back to list
                   </a>
               </div>
            </div>

        </div>
    </div>
</div>